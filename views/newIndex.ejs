<!DOCTYPE html>
<html ng-app="mapApp">
<% include newHeader.ejs %>
<body>
<div style="padding: 20px;" class="row service-container">
    <h2>
        How to use
    </h2>
    <p>
        Select an Area on the map to see the Top crop Data
    </p>
</div>

<!-- Input part starts here -->

<div class="container-fluid">
    <div class="row content" style="height:100%">
        <div class="col-sm-7">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-xs-12">
                    <div class="well">
                        <div class="form-group row">
                            <div style="padding: 0px;" class="col-lg-12 col-xs-12">
                                <div id="map-canvas">
                                    google map
                                    <my-maps id="map-canvas"></my-maps>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-5">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-xs-12">
                    <div class="well">
                        <div class="form-group row">
                            <div style="padding: 0px;" class="col-lg-12 col-xs-12">
                                <div ng-controller="BarCtrl">
                                    <div class="produceChart text-center"  id="barChart">
                                        <label>Acres of harvest in the region</label>
                                        <canvas id="bar" class="chart chart-bar"
                                                chart-data="dataBar" chart-labels="labelsBar" chart-series="series">
                                        </canvas>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row content" style="height:100%">
        <div class="col-sm-12">
            <div class="row">
                <div>
                    <button ng-repeat="produce in producesBar" class="button" ng-click="selectChart($index)"> {{ produce.name }}</button>
                </div>
                <div class="col-lg-12 col-md-12 col-xs-12">
                    <div class="well">
                        <div class="form-group row">
                            <div style="padding: 0px;" class="col-lg-12 col-xs-12">
                                <div ng-controller="LineCtrl" ng-show="selected" id="lineChart">
                                    <label>Price trend of {{name}}</label>
                                    <br>
                                    <label> measured in {{unit}}</label>
                                    <canvas class="chart chart-line priceChart" chart-data="dataLine"
                                            chart-labels="year" chart-legend="false" chart-series="name"
                                            chart-click="onClick">
                                    </canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>